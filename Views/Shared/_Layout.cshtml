<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CT600 Submission</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body {
            padding-top: 70px;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .auth-status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9em;
        }
        .auth-status.authenticated {
            background-color: #d4edda;
            color: #155724;
        }
        .auth-status.not-authenticated {
            background-color: #f8d7da;
            color: #721c24;
        }
        .card {
            margin-bottom: 20px;
        }
        .status-badge {
            font-size: 0.85em;
        }
        .btn-action {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-file-earmark-text"></i> CT600 Submission System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Auth">Authentication</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/swagger" target="_blank">API Docs</a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <span id="authStatus" class="auth-status not-authenticated">
                        <i class="bi bi-shield-lock"></i> Checking...
                    </span>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <footer class="mt-5 py-3 bg-light">
        <div class="container text-center">
            <small class="text-muted">
                CT600 Submission System &copy; @DateTime.Now.Year | 
                <a href="/swagger" target="_blank">API Documentation</a>
            </small>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // API base URL from view data
        const API_BASE_URL = '@ViewData["ApiBaseUrl"]';

        // Check authentication status on page load
        $(document).ready(function() {
            checkAuthStatus();
        });

        function checkAuthStatus() {
            $.ajax({
                url: API_BASE_URL + '/api/auth/status',
                method: 'GET',
                success: function(response) {
                    updateAuthStatus(response.isAuthenticated);
                },
                error: function() {
                    updateAuthStatus(false);
                }
            });
        }

        function updateAuthStatus(isAuthenticated) {
            const statusElement = $('#authStatus');
            if (isAuthenticated) {
                statusElement
                    .removeClass('not-authenticated')
                    .addClass('authenticated')
                    .html('<i class="bi bi-shield-check"></i> Authenticated');
            } else {
                statusElement
                    .removeClass('authenticated')
                    .addClass('not-authenticated')
                    .html('<i class="bi bi-shield-lock"></i> Not Authenticated');
            }
        }

        // Utility function to show alerts
        function showAlert(message, type = 'info') {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('#alertContainer').append(alertHtml);
            
            // Auto-dismiss after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
